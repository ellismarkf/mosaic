<% if !@uncolored_text.empty? %>
  <div class="cf frame">
    <% if @shape == 'triangle' %>
      <% @uncolored_text.each_with_index do |letter, index| %>
        <% if !index.even? %>
          <span class="<%= @shape %> <%= @size %> <%= @magical %> up" style="border-bottom-color: <%= @colors[letter] %>; width: 0px; height: 0px;"></span>
        <% else %>
          <span class="<%= @shape %> <%= @size %> <%= @magical %> down" style="border-top-color: <%= @colors[letter] %>; width: 0px; height: 0px;"></span>
        <% end %>
      <% end %>
    <% else %>
      <% @uncolored_text.each do |letter| %>
        <span class="<%= @shape %> <%= @magical %> <%= @size %>" style="background: <%= @colors[letter] %>"></span>
      <% end %>
    <% end %>
  </div>
<!--   <div class="quote">
    <h2><%= @original_text %></h2>
  </div> -->
<% end %>
